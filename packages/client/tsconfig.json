{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@a2a-webcap/shared": ["../shared/src"]
    },
    "types": ["bun-types"],
    "moduleResolution": "nodenext"
  },
  "include": ["src", "build.ts"],
  "exclude": ["node_modules", "dist", "acp-server-example"],
  "references": [{ "path": "../shared" }]
}
