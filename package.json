{
    "name": "a2a-webcap-monorepo",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "pnpm run clean && pnpm install && pnpm run build-packages",
        "build-packages": "pnpm run build:shared && pnpm run build:server && pnpm run build:client",
        "build:shared": "cd packages/shared && pnpm run build",
        "build:server": "cd packages/server && pnpm run build",
        "build:client": "cd packages/client && pnpm run build",
        "test": "vitest run >/dev/null 2>/tmp/testing.log",
        "test:watch": "vitest >/dev/null 2>/tmp/testing.log",
        "test:coverage": "vitest run --coverage >/dev/null 2>/tmp/testing.log",
        "lint": "eslint . --ext .ts",
        "clean": "bash -c scripts/clean.sh",
        "dev:server": "tsx packages/server/src/index.ts",
        "demo:capnweb": "tsx examples/acp-server-example/session.ts",
        "capnweb:compat-check": "tsx scripts/capnweb-compat-check.ts"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.7",
        "@cloudflare/vitest-pool-workers": "^0.10.7",
        "@cloudflare/workers-types": "^4.20251117.0",
        "@types/node": "^20.19.25",
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^2.1.9",
        "miniflare": "^4.20251109.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vitest": "^2.1.9"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "tsup": "^8.5.1",
        "wrangler2": "^1.0.0"
    }
}
