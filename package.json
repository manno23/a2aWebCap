{
  "name": "a2a-webcap-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run clean && npm install && npm run build:packages",
    "build:packages": "npm run build -w packages/shared && npm run build -w packages/server && npm run build -w packages/client",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "dev:server": "tsx packages/server/src/index.ts",
    "demo:capnweb": "tsx acp-server-example/session.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "capnweb": "^0.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
